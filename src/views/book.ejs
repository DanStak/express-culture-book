<%- include('./includes/start.ejs')-%>

<div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
    <%- include('./components/header.ejs')-%>

    <div class="p-6 bg-gray-400 flex">

        <div class="mr-8">
            <img src="/placeholder.jpg" alt="Dinosaur" />
        </div>

        <div class="text-white">
            <h1 class="text-3xl mb-7"><%=book.title%></h1>
            <span class="text-2xl mb-4"><%=book.author%></span>
            <p><%=book.description%></p>
        </div>

        <div>
            <span>Dodaj do biblioteczki</span>

            <div class="flex gap-2">
                <div>
                <form action="/library" method="post">
                    <button class="bg-white rounded h-14 px-5 hover:bg-slate-50">Przeczytane</button>
                    <input type="hidden" name="bookId" value="<%=book.id%>"/>
                    <input type="hidden" name="action" value="readed"/>
                </form>
            </div>

            <div>
                <form action="/library" method="post">
                    <button class="bg-white rounded h-14 px-5 hover:bg-slate-50">Wlaśnie czytam</button>
                    <input type="hidden" name="bookId" value="<%=book.id%>"/>
                    <input type="hidden" name="action" value="reading"/>
                </form>
            </div>

            <div>
                <form action="/library" method="post">
                    <button class="bg-white rounded h-14 px-5 hover:bg-slate-50">Chcę przeczytać</button>
                    <input type="hidden" name="action" value="want-to-read"/>
                </form>
            </div>
            </div>
            
        </div>

    </div>

    <div>
        <h2>Recenzje</h2>


    </div>
</div>

<%- include('./includes/end.ejs')-%>
